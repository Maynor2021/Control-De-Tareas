@model IEnumerable<AuditLogVm>

@{
    ViewData["Title"] = "Auditoría del Sistema";
    Layout = "_Layout"; // Ajusta según tu layout
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-clipboard-list mr-2"></i>Auditoría del Sistema
        </h1>
        <div>
            <span class="text-muted">Monitorea todas las actividades del sistema</span>
        </div>
    </div>

    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Eventos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalEventos</div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                <span>Registrados</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-database fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Exitosos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Exitosos</div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                <span>Completados</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Fallidos
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Fallidos</div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                <span>Con errores</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-times-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Hoy
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.EventosHoy</div>
                            <div class="mt-2 mb-0 text-muted text-xs">
                                <span>Eventos del día</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Registro de Actividades -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-history mr-1"></i>Registro de Actividades
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Fecha/Hora</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th>Acción</th>
                            <th>Módulo</th>
                            <th>Detalles</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <small>@item.CreatedAt.ToString("yyyy-MM-dd")</small><br>
                                    <small class="text-muted">@item.CreatedAt.ToString("HH:mm:ss")</small>
                                </td>
                                <td>
                                    <div class="font-weight-bold">@item.UserName</div>
                                </td>
                                <td>
                                    <span class="badge @item.RoleBadgeClass">@item.UserRole</span>
                                </td>
                                <td>
                                    <span class="font-weight-bold">@item.ActionDisplay</span>
                                </td>
                                <td>@item.EntityDisplay</td>
                                <td>
                                    <div class="text-truncate" style="max-width: 200px;" 
                                         title="@item.Details">@item.Details</div>
                                </td>
                                <td>
                                    <span class="badge @item.EstadoBadgeClass">
                                        <i class="fas @(item.EstadoDisplay == "Exitoso" ? "fa-check" : "fa-times") mr-1"></i>
                                        @item.EstadoDisplay
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Detalles" asp-route-id="@item.Id" 
                                           class="btn btn-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!item.IsSoftDeleted)
                                        {
                                            <form asp-action="Eliminar" asp-route-id="@item.Id" 
                                                  method="post" class="d-inline" 
                                                  onsubmit="return confirm('¿Eliminar este registro de auditoría?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Si no hay registros -->
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">No hay registros de auditoría</h5>
                    <p class="text-muted">Las actividades del sistema aparecerán aquí</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "order": [[0, "desc"]], // Ordenar por fecha descendente
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Spanish.json"
                },
                "pageLength": 10,
                "responsive": true,
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rt<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>'
            });
        });
    </script>
}