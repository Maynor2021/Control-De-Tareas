@model Control_De_Tareas.Models.UserVm
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Crear Cuenta | Control De Tareas</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: #e9ecef;
            height: 100vh;
        }

        .topbar {
            background: #337ab7;
            color: #fff;
            padding: 15px 25px;
            font-size: 22px;
            font-weight: bold;
            letter-spacing: .5px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        }

        .auth-card2 {
            background: #fff;
            border-radius: 12px;
            padding: 36px 30px 28px 30px;
            box-shadow: 0 2px 18px rgba(0,0,0,0.12);
        }

        .form-label {
            font-weight: 500;
            color: #337ab7;
            margin-bottom: 6px;
        }

        .btn-success {
            background: #38b000;
            border: none;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .auth-link {
            font-size: .95rem;
            color: #337ab7;
            font-weight: 500;
        }

            .auth-link:hover {
                color: #23527c;
                text-decoration: underline;
            }

        .alert-success {
            background-color: #d1e7dd;
            border-color: #badbcc;
            color: #0f5132;
        }
    </style>
</head>
<body>
    <div class="topbar">Control De Tareas</div>
    <div class="container d-flex justify-content-center align-items-center" style="height: 93vh;">
        <div class="col-md-6 col-lg-5 col-sm-8 auth-card2 mx-auto">
            <h3 class="text-center mb-4 text-primary fw-bold">Crear cuenta</h3>

            @if (!User.Identity?.IsAuthenticated == true)
            {
                <div class="alert alert-warning text-center">
                    <i class="bi bi-shield-lock"></i> Debes iniciar sesión como administrador para registrar usuarios.
                    <br>
                    <a asp-action="Login" class="btn btn-primary btn-sm mt-2">Iniciar Sesión</a>
                </div>
            }
            else if (!User.IsInRole("Administrador"))
            {
                <div class="alert alert-warning text-center">
                    <i class="bi bi-shield-lock"></i> Solo administradores pueden registrar nuevos usuarios.
                    <br>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-sm mt-2">Volver al inicio</a>
                </div>
            }
            else
            {
                <form method="post" asp-action="Register" autocomplete="off">
                    <div class="mb-3">
                        <label class="form-label">Nombre completo</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-bounding-box"></i></span>
                            <input type="text" class="form-control" asp-for="Nombre" required placeholder="Nombre completo" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" asp-for="Email" required placeholder="Correo electrónico" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control" asp-for="PasswordHash" required placeholder="Contraseña (mínimo 6 caracteres)" minlength="6" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tipo de usuario</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <select class="form-control" name="roleId" required>
                                <option value="">Seleccione el tipo de usuario</option>
                                @if (ViewBag.Roles != null)
                                {
                                    foreach (var role in ViewBag.Roles)
                                    {
                                        <option value="@role.RoleId">@role.RoleName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Seleccione el rol que tendrá el usuario en el sistema.
                        </div>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-2 text-center">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success mt-2 text-center">@ViewBag.Success</div>
                    }

                    <button class="btn btn-success w-100 mt-2">
                        <i class="bi bi-person-plus"></i> Registrar Usuario
                    </button>
                </form>
            }

            <div class="text-center mt-3">
                <a asp-action="Login" class="auth-link text-decoration-none">Iniciar Sesión</a>
                <br>
                <a asp-controller="Home" asp-action="Index" class="auth-link text-decoration-none mt-1">
                    <i class="bi bi-house-door"></i> Volver al inicio
                </a>
            </div>
        </div>
    </div>
</body>
</html>