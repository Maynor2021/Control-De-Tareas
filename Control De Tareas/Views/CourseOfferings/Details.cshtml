@model Control_De_Tareas.Models.CourseOfferingVm
@{
    ViewData["Title"] = "Detalles del Curso";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
    var isProfesor = ViewBag.IsProfesor as bool? ?? false;
    var userRole = ViewBag.UserRole as string ?? "Estudiante";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 text-primary">
                <i class="bi bi-journal-text"></i> Detalles del Curso
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("MisCursos", "CourseOfferings")">Mis Cursos</a>
                    </li>
                    <li class="breadcrumb-item active">@Model.CourseName</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="@Url.Action("MisCursos", "CourseOfferings")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
            @if (isAdmin || isProfesor)
            {
                <a href="@Url.Action("Index", new { id = Model.Id })" class="btn btn-info me-2">
                    <i class="bi bi-people"></i> Inscripciones
                </a>
            }
            @if (isAdmin)
            {
                <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
            }
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Información Principal -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Información del Curso
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nombre del Curso:</dt>
                        <dd class="col-sm-9">@Model.CourseName</dd>

                        <dt class="col-sm-3">Código:</dt>
                        <dd class="col-sm-9">@Model.CourseCode</dd>

                        <dt class="col-sm-3">Sección:</dt>
                        <dd class="col-sm-9">@Model.Section</dd>

                        <dt class="col-sm-3">Profesor:</dt>
                        <dd class="col-sm-9">
                            @Model.ProfessorName
                            <br />
                            <small class="text-muted">@Model.ProfessorEmail</small>
                        </dd>

                        <dt class="col-sm-3">Período:</dt>
                        <dd class="col-sm-9">
                            @Model.PeriodName
                            <br />
                            <small class="text-muted">
                                @(Model.PeriodStartDate?.ToString("dd/MM/yyyy") ?? "N/A") - @(Model.PeriodEndDate?.ToString("dd/MM/yyyy") ?? "N/A")
                            </small>
                        </dd>

                        <dt class="col-sm-3">Fecha de Creación:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-3">Estado:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Estadísticas -->
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card bg-info text-white">
                        <div class="card-body text-center">
                            <h1 class="display-4">@Model.EnrolledStudentsCount</h1>
                            <p class="mb-0">Estudiantes Inscritos</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body text-center">
                            <h1 class="display-4">@Model.TasksCount</h1>
                            <p class="mb-0">Tareas</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h1 class="display-4">@Model.AnnouncementsCount</h1>
                            <p class="mb-0">Anuncios</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-lightning-charge"></i> Acciones Rápidas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <!-- Documentos -->
                        <a href="@Url.Action("Documentos", new { id = Model.Id })" 
                           class="btn btn-outline-primary btn-block">
                            <i class="bi bi-folder"></i> Documentos del Curso
                        </a>

                        <!-- Gestión de Inscripciones (Solo Profesor/Admin) -->
                        @if (isProfesor || isAdmin)
                        {
                            <a href="@Url.Action("Index", new { id = Model.Id })" 
                               class="btn btn-outline-info btn-block">
                                <i class="bi bi-people"></i> Gestionar Inscripciones
                            </a>
                        }

                        <!-- Cambiar Estado (Solo Profesor/Admin) -->
                        @if (isProfesor || isAdmin)
                        {
                            <form method="post" 
                                  action="@Url.Action("ToggleStatus", "CourseOfferings")"
                                  class="d-grid"
                                  onsubmit="return confirm('¿Está seguro de @(Model.IsActive ? "desactivar" : "activar") este curso?')">
                                <input type="hidden" name="id" value="@Model.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" 
                                        class="btn @(Model.IsActive ? "btn-warning" : "btn-success") btn-block">
                                    <i class="bi bi-power"></i>
                                    @(Model.IsActive ? "Desactivar Curso" : "Activar Curso")
                                </button>
                            </form>
                        }

                        <!-- Eliminar (solo admin) -->
                        @if (isAdmin)
                        {
                            <a href="@Url.Action("Delete", new { id = Model.Id })" 
                               class="btn btn-outline-danger btn-block"
                               onclick="return confirm('¿Está seguro de eliminar esta oferta de curso?')">
                                <i class="bi bi-trash"></i> Eliminar Oferta
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Información del Período -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar"></i> Información del Período
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.PeriodStartDate.HasValue && Model.PeriodEndDate.HasValue)
                    {
                        var today = DateTime.Now.Date;
                        var daysTotal = (Model.PeriodEndDate.Value - Model.PeriodStartDate.Value).Days;
                        var daysPassed = (today - Model.PeriodStartDate.Value).Days;
                        var progress = daysTotal > 0 ? (daysPassed * 100 / daysTotal) : 0;
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between small mb-1">
                                <span>Progreso:</span>
                                <span>@progress.ToString("0")%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar @GetProgressColor(progress)" 
                                     style="width: @progress%"></div>
                            </div>
                        </div>
                        
                        <p class="small mb-1">
                            <strong>Inicio:</strong> @Model.PeriodStartDate.Value.ToString("dd/MM/yyyy")
                        </p>
                        <p class="small mb-1">
                            <strong>Fin:</strong> @Model.PeriodEndDate.Value.ToString("dd/MM/yyyy")
                        </p>
                        <p class="small mb-0">
                            <strong>Días restantes:</strong> @Math.Max(0, (Model.PeriodEndDate.Value - today).Days)
                        </p>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">
                            <i class="bi bi-exclamation-circle"></i>
                            No hay información de período disponible.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetProgressColor(int progress)
    {
        if (progress < 25) return "bg-success";
        if (progress < 50) return "bg-info";
        if (progress < 75) return "bg-warning";
        return "bg-danger";
    }
}