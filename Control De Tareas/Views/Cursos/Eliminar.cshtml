@model Control_De_Tareas.Models.CursoDto
@{
    ViewData["Title"] = "Eliminar Curso";
    Layout = "_Layout";

    var tieneOfertas = ViewBag.TieneOfertas as bool? ?? false;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 text-danger">
                    <i class="fas fa-trash-alt me-2"></i>Eliminar Curso
                </h2>
                <a href="@Url.Action("Index", "Cursos")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
            </div>

            <!-- Advertencia -->
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Icono de advertencia -->
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-circle text-danger fa-4x"></i>
                        <h4 class="text-danger mt-3">¿Está seguro de eliminar este curso?</h4>
                    </div>

                    <!-- Información del curso -->
                    <div class="alert alert-warning">
                        <h6 class="alert-heading">
                            <i class="fas fa-info-circle me-2"></i>Información del curso a eliminar:
                        </h6>
                        <hr>
                        <dl class="row mb-0">
                            <dt class="col-sm-3">Código:</dt>
                            <dd class="col-sm-9">@Model.Codigo</dd>

                            <dt class="col-sm-3">Nombre:</dt>
                            <dd class="col-sm-9">@Model.Nombre</dd>

                            <dt class="col-sm-3">Descripción:</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</dd>

                            <dt class="col-sm-3">Estado:</dt>
                            <dd class="col-sm-9">
                                <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                                    @Model.Estado
                                </span>
                            </dd>
                        </dl>
                    </div>

                    <!-- Restricciones -->
                    @if (tieneOfertas)
                    {
                        <div class="alert alert-danger">
                            <h6 class="alert-heading">
                                <i class="fas fa-ban me-2"></i>No se puede eliminar
                            </h6>
                            <p class="mb-0">
                                Este curso tiene ofertas asociadas. Primero debes eliminar todas las ofertas de este curso antes de poder eliminarlo.
                            </p>
                            <div class="mt-2">
                                <a href="@Url.Action("ListadoOfertas", "CourseOfferings")" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-external-link-alt me-1"></i>Ir a Gestionar Ofertas
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="fas fa-check-circle me-2"></i>Se puede eliminar
                            </h6>
                            <p class="mb-0">
                                Este curso no tiene ofertas asociadas, por lo que se puede eliminar sin problemas.
                            </p>
                        </div>
                    }

                    <!-- Consecuencias -->
                    <div class="alert alert-secondary">
                        <h6 class="alert-heading">
                            <i class="fas fa-exclamation-circle me-2"></i>Consecuencias de la eliminación
                        </h6>
                        <ul class="mb-0">
                            <li>El curso desaparecerá de todas las listas</li>
                            <li>No podrá ser utilizado para crear nuevas ofertas</li>
                            <li>La eliminación es lógica (soft delete) - puede ser reactivado por un administrador</li>
                            <li>Las ofertas existentes se mantendrán (si las hay)</li>
                        </ul>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Cursos")" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>

                        @if (!tieneOfertas)
                        {
                            <form method="post" asp-action="EliminarConfirmado">
                                <input type="hidden" name="id" value="@Model.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('¿Está completamente seguro? Esta acción marcará el curso como eliminado.')">
                                    <i class="fas fa-trash-alt me-2"></i>Sí, Eliminar Curso
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-danger" disabled title="No se puede eliminar porque tiene ofertas asociadas">
                                <i class="fas fa-trash-alt me-2"></i>No se puede eliminar
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>