@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Crear nueva contraseña | Control De Tareas</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: #e9ecef;
            height: 100vh;
        }

        .topbar {
            background: #337ab7;
            color: #fff;
            padding: 15px 25px;
            font-size: 22px;
            font-weight: bold;
            letter-spacing: .5px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        }

        .auth-card2 {
            background: #fff;
            border-radius: 12px;
            padding: 40px 32px 30px 32px;
            box-shadow: 0 2px 18px rgba(0,0,0,0.12);
        }

        .form-label {
            font-weight: 500;
            color: #337ab7;
            margin-bottom: 6px;
        }

        .btn-primary {
            background: #337ab7;
            border: none;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .auth-link {
            font-size: .95rem;
            color: #337ab7;
            font-weight: 500;
        }

            .auth-link:hover {
                color: #23527c;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="topbar">Control De Tareas</div>
    <div class="container d-flex justify-content-center align-items-center" style="height: 90vh;">
        <div class="col-md-5 col-sm-8 auth-card2 mx-auto">
            <h3 class="text-center mb-4 text-primary fw-bold">Crear nueva contraseña</h3>
            <p class="text-center text-secondary">Ingresa y confirma tu nueva contraseña</p>
            <form method="post" asp-action="CambiarContraseña" autocomplete="off" id="formPassword">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" class="form-control" name="Email" value="@ViewBag.Email" readonly />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Nueva contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" name="Password" id="Password" required minlength="6" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Confirmar contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" name="ConfirmPassword" id="ConfirmPassword" required minlength="6" />
                    </div>
                </div>
                <div id="clientError" class="alert alert-danger d-none mb-2"></div>
                @if (ViewBag.Msg != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Msg</div>
                }
                <button class="btn btn-primary w-100 mt-2">Guardar contraseña</button>
            </form>
            <div class="text-center mt-3">
                <a asp-action="Login" class="auth-link text-decoration-none">Volver al inicio de sesión</a>
            </div>
            <script>
                document.getElementById('formPassword').addEventListener('submit', function (e) {
                    var pass = document.getElementById('Password').value;
                    var confirm = document.getElementById('ConfirmPassword').value;
                    var errorDiv = document.getElementById('clientError');
                    if (pass !== confirm) {
                        errorDiv.classList.remove('d-none');
                        errorDiv.textContent = 'Las contraseñas no coinciden';
                        e.preventDefault();
                    } else {
                        errorDiv.classList.add('d-none');
                    }
                });
            </script>
        </div>
    </div>
</body>
</html>

