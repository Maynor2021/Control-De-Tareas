@model Control_De_Tareas.Data.Entitys.Tareas
@{
    ViewData["Title"] = "Eliminar Tarea";
}

<h2>¿Eliminar tarea?</h2>

<div class="alert alert-warning">
    ¿Seguro que deseas eliminar esta tarea?
    <br />Esta acción aplica borrado lógico.
</div>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Descripción:</strong> @Model.Description</p>
    <p><strong>Fecha límite:</strong> @Model.DueDate.ToLocalTime().ToString("g")</p>
    <p><strong>Puntos:</strong> @Model.MaxScore</p>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" asp-route-courseOfferingId="@Model.CourseOfferingId" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
