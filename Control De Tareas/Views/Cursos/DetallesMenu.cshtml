@model Control_De_Tareas.Models.DetallesCursosVM
@{
    ViewData["Title"] = "Detalles del Curso";
    Layout = "_Layout";

    var puedeAccederContenido = ViewBag.PuedeAccederContenido as bool? ?? false;
    var estaInscrito = ViewBag.EstaInscrito as bool? ?? false;
    var puedeMatricularse = ViewBag.PuedeMatricularse as bool? ?? false;
    var userRole = ViewBag.UserRole as string ?? "Estudiante";
    var courseOffering = ViewBag.CourseOffering as Control_De_Tareas.Data.Entitys.CourseOfferings;

    var isAdmin = userRole == "Administrador";
    var isProfesor = userRole == "Profesor";
    var isEstudiante = userRole == "Estudiante";
}

<div class="container-fluid py-4">
    <!-- Cabecera -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h3 mb-1">@Model.Nombre</h2>
                    <p class="text-muted mb-0">@Model.Descripcion</p>
                    @if (courseOffering != null)
                    {
                        <small class="text-muted">
                            Sección: @courseOffering.Section |
                            Período: @courseOffering.Period?.Name |
                            Profesor: @courseOffering.Professor?.UserName
                        </small>
                    }
                </div>
                <div>
                    <a href="@Url.Action("Index", "Cursos")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensaje si no tiene acceso completo -->
    @if (!puedeAccederContenido && isEstudiante)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Vista previa del curso:</strong> Para acceder a todo el contenido del curso, necesitas matricularte.
            @if (puedeMatricularse)
            {
                <div class="mt-2">
                    <a href="@Url.Action("Details", "CourseOfferings", new { id = Model.Id })"
                       class="btn btn-success">
                        <i class="fas fa-user-plus me-1"></i>Matricularme en este curso
                    </a>
                </div>
            }
            else if (courseOffering != null && !courseOffering.IsActive)
            {
                <div class="mt-2">
                    <span class="text-warning">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        Este curso no está disponible para matrícula.
                    </span>
                </div>
            }
        </div>
    }

    <!-- Estadísticas (solo para quienes tienen acceso) -->
    @if (puedeAccederContenido)
    {
        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h1 class="display-4">@Model.TotalTareas</h1>
                        <p class="mb-0">Tareas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h1 class="display-4">@Model.TotalDocumentos</h1>
                        <p class="mb-0">Documentos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h1 class="display-4">@Model.TotalAnuncios</h1>
                        <p class="mb-0">Anuncios</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h1 class="display-4">@Model.TotalEnlaces</h1>
                        <p class="mb-0">Enlaces</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Acciones según permisos -->
    <div class="row">
        @if (puedeAccederContenido)
        {
            <!-- Botones para quienes tienen acceso completo -->
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-tasks me-2"></i>Tareas
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            @if (isEstudiante)
                            {
                                <span>Ver y entregar tus tareas en este curso.</span>
                            }
                            else if (isProfesor)
                            {
                                <span>Ver y gestionar tareas de este curso.</span>
                            }
                            else
                            {
                                <span>Administra las tareas del curso.</span>
                            }
                        </p>
                        <div class="d-grid gap-2">
                            <!-- Enlace CORREGIDO que filtra por este curso específico -->
                            <a href="@Url.Action("TareasEstudiantes", "Tareas", new { courseOfferingId = Model.Id })"
                               class="btn btn-outline-primary">
                                <i class="fas fa-eye me-1"></i>
                                @if (isEstudiante)
                                {
                                    <span>Ver Mis Tareas</span>
                                }
                                else if (isProfesor)
                                {
                                    <span>Ver Tareas del Curso</span>
                                }
                                else
                                {
                                    <span>Ver Tareas</span>
                                }
                            </a>

                            <!-- Solo profesores y administradores pueden crear tareas -->
                            @if (isAdmin || isProfesor)
                            {
                                <a href="@Url.Action("Crear", "Tareas")"
                                   class="btn btn-outline-success">
                                    <i class="fas fa-plus me-1"></i>Nueva Tarea
                                </a>
                            }
                        </div>

                        <!-- Información adicional para estudiantes -->
                        @if (isEstudiante)
                        {
                            <div class="mt-3 pt-3 border-top">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Verás solo las tareas de este curso específico
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-file-alt me-2"></i>Documentos
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Documentos compartidos del curso.</p>
                        <div class="d-grid">
                            <a href="@Url.Action("Documentos", "CourseOfferings", new { id = Model.Id })"
                               class="btn btn-outline-primary">
                                <i class="fas fa-folder-open me-1"></i>Ver Documentos
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-bullhorn me-2"></i>Anuncios
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">Anuncios importantes del curso.</p>
                        <div class="d-grid gap-2">
                            <a href="#" class="btn btn-outline-primary">
                                <i class="fas fa-eye me-1"></i>Ver Anuncios
                            </a>
                            @if (isAdmin || isProfesor)
                            {
                                <a href="#" class="btn btn-outline-success">
                                    <i class="fas fa-plus me-1"></i>Nuevo Anuncio
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones administrativas -->
            @if (isAdmin || isProfesor)
            {
                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-users me-2"></i>Gestión de Estudiantes
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Administra las inscripciones de estudiantes.</p>
                            <div class="d-grid">
                                <a href="@Url.Action("Index", "CourseOfferings", new { id = Model.Id })"
                                   class="btn btn-outline-primary">
                                    <i class="fas fa-user-friends me-1"></i>Gestionar Inscripciones
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-cog me-2"></i>Configuración
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Opciones de configuración del curso.</p>
                            <div class="d-grid gap-2">
                                @if (isAdmin)
                                {
                                    <a href="@Url.Action("Edit", "CourseOfferings", new { id = Model.Id })"
                                       class="btn btn-outline-warning">
                                        <i class="fas fa-edit me-1"></i>Editar Oferta
                                    </a>
                                }
                                <a href="@Url.Action("Details", "CourseOfferings", new { id = Model.Id })"
                                   class="btn btn-outline-info">
                                    <i class="fas fa-info-circle me-1"></i>Ver Detalles Completos
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Información básica para quienes no tienen acceso completo -->
            <div class="col-md-12 mb-3">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle me-2"></i>Información del Curso
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-4">Nombre:</dt>
                                    <dd class="col-sm-8">@Model.Nombre</dd>

                                    <dt class="col-sm-4">Descripción:</dt>
                                    <dd class="col-sm-8">@Model.Descripcion</dd>

                                    @if (courseOffering != null)
                                    {
                                        <dt class="col-sm-4">Sección:</dt>
                                        <dd class="col-sm-8">@courseOffering.Section</dd>

                                        <dt class="col-sm-4">Período:</dt>
                                        <dd class="col-sm-8">@courseOffering.Period?.Name</dd>

                                        <dt class="col-sm-4">Profesor:</dt>
                                        <dd class="col-sm-8">@courseOffering.Professor?.UserName</dd>

                                        <dt class="col-sm-4">Estado:</dt>
                                        <dd class="col-sm-8">
                                            @if (courseOffering.IsActive)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactivo</span>
                                            }
                                        </dd>
                                    }
                                </dl>
                            </div>
                            <div class="col-md-4">
                                <div class="card border-primary">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Acceso al Curso</h5>
                                        <p class="card-text">
                                            @if (puedeMatricularse)
                                            {
                                                <span class="text-success">
                                                    <i class="fas fa-check-circle fa-2x mb-3"></i><br>
                                                    Disponible para matrícula
                                                </span>
                                                <div class="mt-3">
                                                    <a href="@Url.Action("Details", "CourseOfferings", new { id = Model.Id })"
                                                       class="btn btn-success btn-lg">
                                                        <i class="fas fa-user-plus me-1"></i>Matricularme
                                                    </a>
                                                </div>
                                            }
                                            else if (courseOffering != null && !courseOffering.IsActive)
                                            {
                                                <span class="text-warning">
                                                    <i class="fas fa-exclamation-triangle fa-2x mb-3"></i><br>
                                                    Curso no disponible
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-info">
                                                    <i class="fas fa-info-circle fa-2x mb-3"></i><br>
                                                    Contacta al profesor
                                                </span>
                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>