@{
    ViewData["Title"] = "Mis Archivos Subidos";
    var files = ViewBag.Files as List<Control_De_Tareas.Controllers.FileInfoVm>;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-folder-fill text-primary"></i>
                Mis Archivos Subidos
            </h2>
            <p class="text-muted">Listado de todos los archivos que has subido al sistema.</p>
        </div>
    </div>

    <!-- Mensajes de error y éxito -->
    @if (TempData["Error"] != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Error:</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i>
                    <strong>Éxito:</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    <!-- Acciones -->
    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="Upload" class="btn btn-primary">
                <i class="bi bi-cloud-upload"></i>
                Subir Nuevo Archivo
            </a>
        </div>
    </div>

    <!-- Debug info -->
    <div class="row mb-2">
        <div class="col-12">
            <small class="text-muted">
                Archivos encontrados: @(files?.Count ?? 0)
            </small>
        </div>
    </div>

    <!-- Tabla de archivos -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul text-primary"></i>
                        Lista de Archivos
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (files != null && files.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 30%;">
                                            <i class="bi bi-file-earmark"></i> Nombre del Archivo
                                        </th>
                                        <th style="width: 12%;">
                                            <i class="bi bi-hdd"></i> Tamaño
                                        </th>
                                        <th style="width: 18%;">
                                            <i class="bi bi-calendar"></i> Fecha de Subida
                                        </th>
                                        <th style="width: 15%;">
                                            <i class="bi bi-folder"></i> Ubicación
                                        </th>
                                        <th style="width: 20%;" class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var file in files)
                                    {
                                        <tr>
                                            <td class="align-middle">@index</td>
                                            <td class="align-middle">
                                                @{
                                                    var extension = System.IO.Path.GetExtension(file.FileName).ToLower();
                                                    var iconClass = extension switch
                                                    {
                                                        ".pdf" => "bi-file-pdf text-danger",
                                                        ".doc" or ".docx" => "bi-file-word text-primary",
                                                        ".jpg" or ".jpeg" or ".png" => "bi-file-image text-success",
                                                        ".txt" => "bi-file-text text-secondary",
                                                        _ => "bi-file-earmark text-muted"
                                                    };
                                                }
                                                <i class="bi @iconClass fs-5 me-2"></i>
                                                <strong>@file.FileName</strong>
                                            </td>
                                            <td class="align-middle">
                                                <span class="badge bg-light text-dark">@file.FileSize</span>
                                            </td>
                                            <td class="align-middle">
                                                @file.UploadDate.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td class="align-middle">
                                                @if (file.CourseOfferingId != null && file.TaskId != null)
                                                {
                                                    <small class="text-muted">
                                                        Curso: @file.CourseOfferingId<br>
                                                        Tarea: @file.TaskId
                                                    </small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">No especificado</small>
                                                }
                                            </td>
                                            <td class="align-middle text-center">
                                                <!-- BOTÓN ACTUALIZADO CON TEXTO -->
                                                <a asp-action="DownloadByName"
                                                   asp-route-fileName="@file.FileName"
                                                   asp-route-courseOfferingId="@file.CourseOfferingId"
                                                   asp-route-taskId="@file.TaskId"
                                                   class="btn btn-sm btn-primary"
                                                   title="Descargar archivo">
                                                    <i class="bi bi-download me-1"></i> Descargar
                                                </a>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Resumen -->
                        <div class="card-footer bg-light">
                            <p class="mb-0 text-muted">
                                <i class="bi bi-info-circle"></i>
                                Total de archivos: <strong>@files.Count</strong>
                            </p>
                        </div>
                    }
                    else
                    {
                        <!-- Sin archivos -->
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">No hay archivos subidos</h4>
                            <p class="text-muted">Comienza subiendo tu primer archivo.</p>
                            <a asp-action="Upload" class="btn btn-primary mt-3">
                                <i class="bi bi-cloud-upload"></i>
                                Subir Primer Archivo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilos para la tabla */
    .table-hover tbody tr:hover {
        background-color: rgba(59, 125, 189, 0.05);
    }

    .btn-outline-primary {
        color: #3b7dbd;
        border-color: #3b7dbd;
    }

        .btn-outline-primary:hover {
            background-color: #3b7dbd;
            border-color: #3b7dbd;
            color: white;
        }

    .btn-primary {
        background-color: #3b7dbd;
        border-color: #3b7dbd;
    }

        .btn-primary:hover {
            background-color: #2e6399;
            border-color: #2e6399;
        }

    .text-primary {
        color: #3b7dbd !important;
    }

    .card {
        border-radius: 8px;
    }

    .card-header {
        border-bottom: 2px solid #3b7dbd;
    }

    .table thead th {
        border-bottom: 2px solid #3b7dbd;
        font-weight: 600;
    }

    h2 {
        color: #2c3e50;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }
</style>