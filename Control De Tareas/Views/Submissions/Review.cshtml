@model List<Control_De_Tareas.Data.Entitys.Submissions>

@{
    ViewData["Title"] = "Revisión de Entregas";
    var maxScore = ViewBag.MaxScore ?? 100;
    var taskTitle = ViewBag.TaskTitle ?? "Tarea";
}

<div class="container-fluid mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold">
                <i class="bi bi-clipboard-check"></i> Revisión de Entregas
            </h2>
            <p class="text-muted mb-0">@taskTitle</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <!-- MENSAJES -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger shadow-sm">@TempData["Error"]</div>
    }

    <!-- CARD -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white fw-bold">
            <i class="bi bi-people"></i> Estudiantes que han entregado
        </div>

        <div class="card-body p-0">

            @if (Model == null || !Model.Any())
            {
                <div class="text-center p-5 text-muted">
                    <i class="bi bi-inbox fs-1"></i>
                    <h5 class="mt-3">No hay entregas todavía</h5>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Estudiante</th>
                                <th>Archivos</th>
                                <th>Nota</th>
                                <th>Feedback</th>
                                <th>Estado</th>
                                <th class="text-end">Acción</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var s in Model)
                            {
                                var grade = s.CurrentGrade;
                                var isGraded = grade.HasValue;
                                var latestGrade = s.Grades?.OrderByDescending(g => g.GradedAt).FirstOrDefault();
                                var previousFeedback = latestGrade?.Feedback ?? "";

                                <tr>
                                    <!-- ESTUDIANTE -->
                                    <td class="fw-semibold">
                                        <i class="bi bi-person-circle text-primary"></i>
                                        @s.Student?.UserName
                                    </td>

                                    <!-- ARCHIVOS -->
                                    <td>
                                        @if (s.SubmissionFiles != null && s.SubmissionFiles.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var f in s.SubmissionFiles)
                                                {
                                                    <button class="btn btn-outline-primary btn-sm download-btn" 
                                                            data-fileid="@f.Id" 
                                                            data-filename="@f.FileName"
                                                            title="Descargar @f.FileName">
                                                        <i class="bi bi-download"></i>
                                                        <span class="d-none d-sm-inline"> @f.FileName</span>
                                                    </button>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sin archivos</span>
                                        }
                                    </td>

                                    <!-- FORMULARIO COMPLETO POR FILA -->
                                    <td colspan="4">
                                        <form asp-action="Grade" method="post" class="row g-2 align-items-center">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@s.Id" />

                                            <!-- NOTA -->
                                            <div class="col-md-2">
                                                <input type="number"
                                                       name="grade"
                                                       value="@(grade ?? 0)"
                                                       class="form-control form-control-sm"
                                                       min="0"
                                                       max="@maxScore"
                                                       required />
                                            </div>

                                            <!-- FEEDBACK -->
                                            <div class="col-md-6">
                                                <input type="text"
                                                       name="feedback"
                                                       class="form-control form-control-sm"
                                                       placeholder="Comentario..."
                                                       value="@previousFeedback" />
                                            </div>

                                            <!-- ESTADO -->
                                            <div class="col-md-2">
                                                @if (isGraded)
                                                {
                                                    <span class="badge bg-success">Calificada</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Pendiente</span>
                                                }
                                            </div>

                                            <!-- BOTONES -->
                                            <div class="col-md-2 text-end">
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="bi bi-check2-circle"></i> Guardar
                                                </button>

                                                @if (isGraded)
                                                {
                                                    <form asp-action="Reopen" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@s.Id" />
                                                        <button type="submit" class="btn btn-outline-danger btn-sm ms-1" title="Reabrir entrega">
                                                            <i class="bi bi-arrow-repeat"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Manejar descargas con JavaScript
            document.querySelectorAll('.download-btn').forEach(function(button) {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const fileId = this.getAttribute('data-fileid');
                    const fileName = this.getAttribute('data-filename');
                    
                    // Mostrar indicador de carga
                    const originalHTML = this.innerHTML;
                    this.innerHTML = '<i class="bi bi-hourglass-split"></i>';
                    this.disabled = true;
                    
                    // Crear URL de descarga
                    const url = '@Url.Action("DownloadFile", "Submissions")?fileId=' + fileId;
                    
                    // Método 1: Usar fetch para manejar mejor la descarga
                    fetch(url, {
                        method: 'GET',
                        headers: {
                            'Accept': 'application/octet-stream'
                        }
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Error en la descarga: ' + response.statusText);
                        }
                        return response.blob();
                    })
                    .then(blob => {
                        // Crear enlace temporal para descarga
                        const downloadUrl = window.URL.createObjectURL(blob);
                        const link = document.createElement('a');
                        link.href = downloadUrl;
                        link.download = fileName;
                        
                        // Agregar evento para limpiar después de la descarga
                        link.onclick = function() {
                            setTimeout(function() {
                                window.URL.revokeObjectURL(downloadUrl);
                            }, 100);
                        };
                        
                        document.body.appendChild(link);
                        link.click();
                        document.body.removeChild(link);
                        
                        // Restaurar botón
                        setTimeout(function() {
                            button.innerHTML = originalHTML;
                            button.disabled = false;
                        }, 1000);
                    })
                    .catch(error => {
                        console.error('Error descargando archivo:', error);
                        
                        // Método 2: Intentar con enlace tradicional
                        const fallbackLink = document.createElement('a');
                        fallbackLink.href = url;
                        fallbackLink.target = '_blank';
                        fallbackLink.style.display = 'none';
                        document.body.appendChild(fallbackLink);
                        fallbackLink.click();
                        document.body.removeChild(fallbackLink);
                        
                        // Restaurar botón
                        button.innerHTML = originalHTML;
                        button.disabled = false;
                        
                        // Mostrar mensaje
                        alert('Iniciando descarga. Si no funciona, verifique los permisos o intente nuevamente.');
                    });
                });
            });
            
            // Mejorar la experiencia de los formularios
            document.querySelectorAll('form[asp-action="Grade"]').forEach(function(form) {
                form.addEventListener('submit', function(e) {
                    const submitButton = this.querySelector('button[type="submit"]');
                    if (submitButton) {
                        submitButton.innerHTML = '<i class="bi bi-hourglass-split"></i> Guardando...';
                        submitButton.disabled = true;
                    }
                });
            });
            
            document.querySelectorAll('form[asp-action="Reopen"]').forEach(function(form) {
                form.addEventListener('submit', function(e) {
                    const submitButton = this.querySelector('button[type="submit"]');
                    if (submitButton) {
                        submitButton.innerHTML = '<i class="bi bi-hourglass-split"></i> Reabriendo...';
                        submitButton.disabled = true;
                    }
                });
            });
        });
    </script>
}

<style>
    .card {
        border-radius: 14px;
    }

    .card-header {
        border-radius: 14px 14px 0 0;
    }

    .btn-success {
        background-color: #3b7dbd;
        border-color: #3b7dbd;
    }

        .btn-success:hover {
            background-color: #2e6399;
            border-color: #2e6399;
        }

    .text-primary {
        color: #3b7dbd !important;
    }
    
    .download-btn {
        transition: all 0.2s ease;
        min-width: 40px;
    }
    
    .download-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .download-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.85em;
        padding: 0.35em 0.65em;
    }
</style>