@model List<Control_De_Tareas.Models.CourseBaseVm>
@{
    ViewData["Title"] = "Gestión de Cursos Base";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h3 mb-1">
                        <i class="fas fa-book me-2"></i>Gestión de Cursos Base
                    </h2>
                    <p class="text-muted mb-0">Administra los cursos base del sistema</p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Cursos")" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Volver a Cursos
                    </a>
                    <a href="@Url.Action("Crear", "Cursos")" class="btn btn-primary me-2">
                        <i class="fas fa-plus me-2"></i>Nuevo Curso Base
                    </a>
                    <a href="@Url.Action("Index", "Periods")" class="btn btn-outline-info">
                        <i class="fas fa-calendar-alt me-2"></i>Gestionar Períodos
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card con tabla de cursos base -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">Cursos Base del Sistema</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>Ofertas</th>
                                <th>Fecha Creación</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var curso in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@curso.Code</td>
                                    <td>@curso.Title</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(curso.Description))
                                        {
                                            <span class="text-muted">Sin descripción</span>
                                        }
                                        else
                                        {
                                            <span title="@curso.Description">
                                                @(curso.Description.Length > 50 ? curso.Description.Substring(0, 50) + "..." : curso.Description)
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (curso.HasOfferings)
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-check me-1"></i>Con ofertas
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times me-1"></i>Sin ofertas
                                            </span>
                                        }
                                    </td>
                                    <td>@curso.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge @(curso.IsActive ? "bg-success" : "bg-secondary")">
                                            @(curso.IsActive ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <!-- Editar -->
                                            <a href="@Url.Action("Editar", "Cursos", new { id = curso.Id })"
                                               class="btn btn-outline-warning"
                                               title="Editar curso base">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <!-- Crear Oferta -->
                                            <a href="@Url.Action("Create", "CourseOfferings")"
                                               class="btn btn-outline-primary"
                                               title="Crear oferta de este curso">
                                                <i class="fas fa-plus-circle"></i>
                                            </a>

                                            <!-- Ver ofertas relacionadas -->
                                            @if (curso.HasOfferings)
                                            {
                                                <a href="@Url.Action("ListadoOfertas", "CourseOfferings", new { courseId = curso.Id })"
                                                   class="btn btn-outline-info"
                                                   title="Ver ofertas de este curso">
                                                    <i class="fas fa-list"></i>
                                                </a>
                                            }

                                            <!-- Eliminar -->
                                            <a href="@Url.Action("Eliminar", "Cursos", new { id = curso.Id })"
                                               class="btn btn-outline-danger"
                                               title="Eliminar curso base"
                                               onclick="return confirm('¿Está seguro de eliminar este curso base?')">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-book-open display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">No hay cursos base registrados</h4>
                    <p class="text-muted">
                        Crea el primer curso base para empezar a crear ofertas.
                    </p>
                    <a href="@Url.Action("Crear", "Cursos")" class="btn btn-primary mt-3">
                        <i class="fas fa-plus me-2"></i>
                        Crear Primer Curso Base
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filtro de búsqueda
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.createElement('input');
            searchInput.type = 'text';
            searchInput.className = 'form-control mb-3';
            searchInput.placeholder = 'Buscar cursos por código o nombre...';
            searchInput.id = 'searchCoursesBase';

            const cardHeader = document.querySelector('.card-header');
            if (cardHeader) {
                cardHeader.appendChild(searchInput);
            }

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const code = row.cells[0].textContent.toLowerCase();
                    const name = row.cells[1].textContent.toLowerCase();

                    if (code.includes(searchTerm) || name.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>
}