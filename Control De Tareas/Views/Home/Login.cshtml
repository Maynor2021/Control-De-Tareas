@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Iniciar Sesión | Control De Tareas</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: #e9ecef;
            height: 100vh;
        }

        .topbar {
            background: #337ab7;
            color: #fff;
            padding: 15px 25px;
            font-size: 22px;
            font-weight: bold;
            letter-spacing: .5px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        }

        .auth-card2 {
            background: #fff;
            border-radius: 12px;
            padding: 40px 32px 30px 32px;
            box-shadow: 0 2px 18px rgba(0,0,0,0.12);
        }

        .form-label {
            font-weight: 500;
            color: #337ab7;
            margin-bottom: 6px;
        }

        .btn-primary {
            background: #337ab7;
            border: none;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .auth-link {
            font-size: .95rem;
            color: #337ab7;
            font-weight: 500;
        }

            .auth-link:hover {
                color: #23527c;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="topbar">Control De Tareas</div>
    <div class="container d-flex justify-content-center align-items-center" style="height: 90vh;">
        <div class="col-md-5 col-sm-8 auth-card2 mx-auto">
            <h3 class="text-center mb-4 text-primary fw-bold">Iniciar Sesión</h3>
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" class="form-control" name="email" required placeholder="Correo electrónico" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" name="password" required placeholder="Contraseña" />
                    </div>
                </div>
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger mt-3 mb-0 text-center">@TempData["Error"]</div>
                }
                <button class="btn btn-primary w-100 mt-2">Ingresar</button>
            </form>
            <div class="text-center mt-3">
                <a asp-action="Register" class="auth-link text-decoration-none">Crear una cuenta</a>
            </div>
        </div>
    </div>
</body>
</html>
