@model List<Control_De_Tareas.Models.PeriodVm>
@{
    ViewData["Title"] = "Gestión de Períodos";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h3 mb-1">
                        <i class="fas fa-calendar-alt me-2"></i>Gestión de Períodos
                    </h2>
                    <p class="text-muted mb-0">Administra los períodos académicos del sistema</p>
                </div>
                <div>
                    <a href="@Url.Action("GestionarCursosBase", "Cursos")" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Volver a Cursos
                    </a>
                    <a href="@Url.Action("Create", "Periods")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nuevo Período
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card con tabla de períodos -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">Períodos Académicos</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Duración</th>
                                <th>Ofertas</th>
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var periodo in Model)
                            {
                                var duracion = (periodo.EndDate - periodo.StartDate).Days;
                                <tr>
                                    <td class="fw-bold">@periodo.Name</td>
                                    <td>@periodo.StartDate.ToString("dd/MM/yyyy")</td>
                                    <td>@periodo.EndDate.ToString("dd/MM/yyyy")</td>
                                    <td>@duracion días</td>
                                    <td>
                                        <span class="badge bg-info">@periodo.CourseOfferingsCount ofertas</span>
                                    </td>
                                    <td>
                                        @if (periodo.IsActive)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <!-- Detalles -->
                                            <a href="@Url.Action("Details", "Periods", new { id = periodo.Id })"
                                               class="btn btn-outline-info"
                                               title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <!-- Editar -->
                                            <a href="@Url.Action("Edit", "Periods", new { id = periodo.Id })"
                                               class="btn btn-outline-warning"
                                               title="Editar período">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <!-- Activar/Desactivar -->
                                            @if (periodo.IsActive)
                                            {
                                                <form method="post" action="@Url.Action("ToggleActive", "Periods", new { id = periodo.Id })"
                                                      style="display: inline;" onsubmit="return confirm('¿Desactivar este período?')">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-secondary"
                                                            title="Desactivar período">
                                                        <i class="fas fa-toggle-off"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" action="@Url.Action("ToggleActive", "Periods", new { id = periodo.Id })"
                                                      style="display: inline;" onsubmit="return confirm('¿Activar este período? Se desactivarán otros períodos activos.')">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-success"
                                                            title="Activar período">
                                                        <i class="fas fa-toggle-on"></i>
                                                    </button>
                                                </form>
                                            }

                                            <!-- Eliminar -->
                                            <form method="post" action="@Url.Action("Delete", "Periods", new { id = periodo.Id })"
                                                  style="display: inline;"
                                                  onsubmit="return confirm('¿Está seguro de eliminar este período?')">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@periodo.Id" />
                                                <button type="submit" class="btn btn-outline-danger"
                                                        title="Eliminar período">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">No hay períodos registrados</h4>
                    <p class="text-muted">
                        Crea el primer período académico para poder crear ofertas de cursos.
                    </p>
                    <a href="@Url.Action("Create", "Periods")" class="btn btn-primary mt-3">
                        <i class="fas fa-plus me-2"></i>
                        Crear Primer Período
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Filtro de búsqueda
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.createElement('input');
            searchInput.type = 'text';
            searchInput.className = 'form-control mb-3';
            searchInput.placeholder = 'Buscar períodos por nombre...';
            searchInput.id = 'searchPeriods';

            const cardHeader = document.querySelector('.card-header');
            if (cardHeader) {
                cardHeader.appendChild(searchInput);
            }

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const name = row.cells[0].textContent.toLowerCase();

                    if (name.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>
}