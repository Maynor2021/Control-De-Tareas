@model Control_De_Tareas.Models.PeriodVm
@{
    ViewData["Title"] = "Detalles del Período";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h3 mb-1">
                        <i class="fas fa-calendar-alt me-2"></i>@Model.Name
                    </h2>
                    <p class="text-muted mb-0">Detalles del período académico</p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Periods")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Información del período -->
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Información General
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Fecha de Inicio:</dt>
                        <dd class="col-sm-9">@Model.StartDate.ToString("dddd, dd MMMM yyyy")</dd>

                        <dt class="col-sm-3">Fecha de Fin:</dt>
                        <dd class="col-sm-9">@Model.EndDate.ToString("dddd, dd MMMM yyyy")</dd>

                        <dt class="col-sm-3">Duración:</dt>
                        <dd class="col-sm-9">
                            @{
                                var duracion = (Model.EndDate - Model.StartDate).Days;
                                <span>@duracion días</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Estado:</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Ofertas de Cursos:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.CourseOfferingsCount ofertas</span>
                        </dd>

                        <dt class="col-sm-3">Creado el:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>

            <!-- Progreso del período -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>Progreso del Período
                    </h5>
                </div>
                <div class="card-body">
                    @{
                        var hoy = DateTime.Now.Date;
                        var inicio = Model.StartDate;
                        var fin = Model.EndDate;
                        var totalDias = (fin - inicio).Days;
                        var diasTranscurridos = (hoy - inicio).Days;

                        if (diasTranscurridos < 0)
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-clock me-2"></i>
                                Este período aún no ha comenzado. Faltan @Math.Abs(diasTranscurridos) días.
                            </div>
                        }
                        else if (diasTranscurridos > totalDias)
                        {
                            <div class="alert alert-warning">
                                <i class="fas fa-calendar-times me-2"></i>
                                Este período ha finalizado. Terminó hace @(diasTranscurridos - totalDias) días.
                            </div>
                        }
                        else
                        {
                            var porcentaje = (diasTranscurridos * 100) / totalDias;
                            <div class="progress mb-3" style="height: 20px;">
                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                     role="progressbar"
                                     style="width: @porcentaje%"
                                     aria-valuenow="@porcentaje"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @porcentaje%
                                </div>
                            </div>
                            <div class="row text-center">
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h5 class="card-title">@diasTranscurridos</h5>
                                            <p class="card-text small">Días transcurridos</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h5 class="card-title">@(totalDias - diasTranscurridos)</h5>
                                            <p class="card-text small">Días restantes</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h5 class="card-title">@totalDias</h5>
                                            <p class="card-text small">Días totales</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Panel de acciones -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>Acciones
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <!-- Editar -->
                        <a href="@Url.Action("Edit", "Periods", new { id = Model.Id })"
                           class="btn btn-outline-warning">
                            <i class="fas fa-edit me-2"></i>Editar Período
                        </a>

                        <!-- Activar/Desactivar -->
                        @if (Model.IsActive)
                        {
                            <form method="post" action="@Url.Action("ToggleActive", "Periods")" class="d-grid">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-secondary"
                                        onclick="return confirm('¿Desactivar este período?')">
                                    <i class="fas fa-toggle-off me-2"></i>Desactivar Período
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" action="@Url.Action("ToggleActive", "Periods")" class="d-grid">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-success"
                                        onclick="return confirm('¿Activar este período? Se desactivarán otros períodos activos.')">
                                    <i class="fas fa-toggle-on me-2"></i>Activar Período
                                </button>
                            </form>
                        }

                        <!-- Ver ofertas -->
                        <a href="@Url.Action("ListadoOfertas", "CourseOfferings", new { periodId = Model.Id })"
                           class="btn btn-outline-info">
                            <i class="fas fa-list me-2"></i>Ver Ofertas de Cursos
                        </a>

                        <!-- Eliminar -->
                        <a href="@Url.Action("Delete", "Periods", new { id = Model.Id })"
                           class="btn btn-outline-danger">
                            <i class="fas fa-trash me-2"></i>Eliminar Período
                        </a>

                        <!-- Volver -->
                        <a href="@Url.Action("Index", "Periods")"
                           class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                        </a>
                    </div>
                </div>
            </div>

            <!-- Información adicional -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-calendar-check me-2"></i>Estado Actual
                    </h6>
                </div>
                <div class="card-body">
                    @{
                        var statusMessage = "";
                        var statusClass = "";

                        if (hoy < inicio)
                        {
                            statusMessage = "Pendiente";
                            statusClass = "bg-warning";
                        }
                        else if (hoy > fin)
                        {
                            statusMessage = "Finalizado";
                            statusClass = "bg-secondary";
                        }
                        else
                        {
                            statusMessage = "En curso";
                            statusClass = "bg-success";
                        }
                    }
                    <div class="text-center">
                        <span class="badge @statusClass p-3 fs-6">@statusMessage</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>