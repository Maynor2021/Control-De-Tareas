@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cambiar Contraseña | Control De Tareas</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: #e9ecef;
            height: 100vh;
        }

        .topbar {
            background: #337ab7;
            color: #fff;
            padding: 15px 25px;
            font-size: 22px;
            font-weight: bold;
            letter-spacing: .5px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        }

        .auth-card2 {
            background: #fff;
            border-radius: 12px;
            padding: 40px 32px 30px 32px;
            box-shadow: 0 2px 18px rgba(0,0,0,0.12);
        }

        .form-label {
            font-weight: 500;
            color: #337ab7;
            margin-bottom: 6px;
        }

        .btn-primary {
            background: #337ab7;
            border: none;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .btn-secondary {
            background: #6c757d;
            border: none;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .auth-link {
            font-size: .95rem;
            color: #337ab7;
            font-weight: 500;
        }

            .auth-link:hover {
                color: #23527c;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="topbar">Control De Tareas</div>
    <div class="container d-flex justify-content-center align-items-center" style="height: 90vh;">
        <div class="col-md-5 col-sm-8 auth-card2 mx-auto">
            <h3 class="text-center mb-4 text-primary fw-bold">Cambiar Contraseña</h3>
            <p class="text-center text-secondary">Ingresa tu contraseña actual y la nueva contraseña</p>

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success text-center">
                    @ViewBag.Success
                </div>
            }

            <form method="post" asp-action="CambiarContraseña" autocomplete="off" id="formPassword">
                <!-- El email viene del usuario logueado -->
                <div class="mb-3">
                    <label class="form-label">Correo Electrónico</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" class="form-control" value="@ViewBag.Email" readonly disabled />
                    </div>
                    <div class="form-text">
                        <i class="bi bi-info-circle"></i> Este es tu correo registrado en el sistema.
                    </div>
                </div>

                <!-- CurrentPassword (para contraseña actual) -->
                <div class="mb-3">
                    <label class="form-label">Contraseña Actual</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" name="CurrentPassword" id="CurrentPassword" required placeholder="Ingresa tu contraseña actual" />
                    </div>
                </div>

                <!-- Nueva contraseña -->
                <div class="mb-3">
                    <label class="form-label">Nueva Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" name="Password" id="Password" required minlength="6" placeholder="Mínimo 6 caracteres" />
                    </div>
                </div>

                <!-- Confirmar nueva contraseña -->
                <div class="mb-3">
                    <label class="form-label">Confirmar Nueva Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" class="form-control" name="ConfirmPassword" id="ConfirmPassword" required minlength="6" placeholder="Repite la nueva contraseña" />
                    </div>
                </div>

                <div id="clientError" class="alert alert-danger d-none mb-2"></div>

                @if (ViewBag.Msg != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Msg</div>
                }

                <div class="d-grid gap-2">
                    <button class="btn btn-primary">
                        <i class="bi bi-key"></i> Cambiar Contraseña
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar y Volver
                    </a>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Login" class="auth-link text-decoration-none">Volver al inicio de sesión</a>
            </div>

            <script>
                document.getElementById('formPassword').addEventListener('submit', function (e) {
                    var currentPass = document.getElementById('CurrentPassword').value;
                    var newPass = document.getElementById('Password').value;
                    var confirmPass = document.getElementById('ConfirmPassword').value;
                    var errorDiv = document.getElementById('clientError');

                    // Limpiar mensaje anterior
                    errorDiv.classList.add('d-none');

                    // Validar que la contraseña actual no esté vacía
                    if (!currentPass || currentPass.trim() === '') {
                        errorDiv.classList.remove('d-none');
                        errorDiv.textContent = 'Debes ingresar tu contraseña actual';
                        e.preventDefault();
                        return;
                    }

                    // Validar longitud de nueva contraseña
                    if (newPass.length < 6) {
                        errorDiv.classList.remove('d-none');
                        errorDiv.textContent = 'La nueva contraseña debe tener al menos 6 caracteres';
                        e.preventDefault();
                        return;
                    }

                    // Validar que las nuevas contraseñas coincidan
                    if (newPass !== confirmPass) {
                        errorDiv.classList.remove('d-none');
                        errorDiv.textContent = 'Las nuevas contraseñas no coinciden';
                        e.preventDefault();
                        return;
                    }

                    // Validar que la nueva contraseña sea diferente a la actual
                    if (newPass === currentPass) {
                        errorDiv.classList.remove('d-none');
                        errorDiv.textContent = 'La nueva contraseña debe ser diferente a la actual';
                        e.preventDefault();
                        return;
                    }
                });
            </script>
        </div>
    </div>
</body>
</html>