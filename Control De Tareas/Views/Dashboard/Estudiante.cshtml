@model dynamic
@{
    ViewData["Title"] = "Dashboard Estudiante";
}

<div class="dashboard-header mb-4">
    <h2 class="fw-bold">Panel del Estudiante</h2>
    <p class="text-muted">Bienvenido de nuevo</p>
</div>

<!-- Cards resumen -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <h3 class="fw-bold">@Model.CursosInscritos.Count</h3>
                <p class="text-muted">Cursos Inscritos</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <h3 class="fw-bold">@Model.TareasPendientes.Count</h3>
                <p class="text-muted">Tareas Pendientes</p>
            </div>
        </div>
    </div>
</div>

<!-- Lista cursos -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <h5 class="fw-bold">Mis Cursos</h5>
        <ul class="list-group mt-3">
            @foreach (var c in Model.CursosInscritos)
            {
                <li class="list-group-item">
                    @c.CourseOffering.Course.Title
                </li>
            }
        </ul>
    </div>
</div>

<!-- Últimas calificaciones -->
<div class="card mt-4 shadow-sm border-0">
    <div class="card-body">
        <h5 class="fw-bold">Últimas Calificaciones</h5>

        @if (Model.UltimasCalificaciones.Count == 0)
        {
            <p class="text-muted">Todavía no tienes calificaciones.</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var s in Model.UltimasCalificaciones)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <span>@s.Task.Title</span>
                        <span class="fw-bold">@s.CurrentGrade</span>
                    </li>
                }
            </ul>
        }
    </div>
</div>

<!-- Acción -->
<div class="mt-4 text-center">
    <a class="btn btn-primary" asp-controller="Cursos" asp-action="Index">Ver Cursos Disponibles</a>
</div>
