@model Control_De_Tareas.Models.CursosVm
@{
    Layout = "_Layout";
    ViewData["Title"] = "Gestión de Cursos";

    var userRole = ViewBag.UserRole as string ?? "Estudiante";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
    var isProfesor = ViewBag.IsProfesor as bool? ?? false;
    var isEstudiante = ViewBag.IsEstudiante as bool? ?? false;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h3 mb-1">
                        @(isAdmin ? "Gestión de Cursos" :
                                                isProfesor ? "Cursos que Imparto" :
                                                "Catálogo de Cursos")
                    </h2>
                    <p class="text-muted mb-0">
                        @(isAdmin ? "Administra todos los cursos del sistema" :
                                                isProfesor ? "Cursos asignados para impartir" :
                                                "Explora los cursos disponibles para matrícula")
                    </p>
                </div>

                @if (isAdmin)
                {
                    <div>
                        <a href="@Url.Action("ListadoOfertas", "CourseOfferings")" class="btn btn-outline-primary me-2">
                            <i class="fas fa-list me-2"></i>Gestionar Ofertas
                        </a>
                        <!-- BOTÓN CORREGIDO: Ahora apunta a GestionarCursosBase -->
                        <a href="@Url.Action("GestionarCursosBase", "Cursos")" class="btn btn-primary">
                            <i class="fas fa-book me-2"></i>Gestionar Cursos Base
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card con tabla de cursos -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">Listado de Cursos</h5>
        </div>
        <div class="card-body">
            @if (Model.Cursos.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                @if (isAdmin || isProfesor)
                                {
                                    <th>Sección</th>
                                    <th>Período</th>
                                }
                                <th>Profesor</th>
                                @if (isAdmin || isProfesor)
                                {
                                    <th>Estudiantes</th>
                                }
                                <th>Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.Cursos)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("MenuDetalles", "Cursos", new { id = course.Id })"
                                           class="text-decoration-none text-dark fw-bold">
                                            @course.Codigo
                                        </a>
                                    </td>
                                    <td>@course.Nombre</td>
                                    @if (isAdmin || isProfesor)
                                    {
                                        <td>@course.Seccion</td>
                                        <td>@course.Periodo</td>
                                    }
                                    <td>@course.InstructorNombre</td>
                                    @if (isAdmin || isProfesor)
                                    {
                                        <td>
                                            <span class="badge bg-info">@course.CantidadEstudiantes</span>
                                        </td>
                                    }
                                    <td>
                                        <span class="badge @(course.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                                            @course.Estado
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <!-- Ver Detalles (MenuDetalles) -->
                                            <a href="@Url.Action("MenuDetalles", "Cursos", new { id = course.Id })"
                                               class="btn btn-outline-primary"
                                               title="Ver detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <!-- Ver en CourseOfferings (Detalles completos) -->
                                            <a href="@Url.Action("Details", "CourseOfferings", new { id = course.Id })"
                                               class="btn btn-outline-info"
                                               title="Ver completo">
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>

                                            <!-- Editar Curso Base (solo admin) -->
                                            @if (isAdmin)
                                            {
                                                <a href="@Url.Action("Editar", "Cursos", new { id = course.CursoId })"
                                                   class="btn btn-outline-warning"
                                                   title="Editar curso base">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }

                                            <!-- Gestionar Inscripciones (admin y profesor del curso) -->
                                            @if (isAdmin || (isProfesor && ViewBag.UserRole == "Profesor"))
                                            {
                                                <a href="@Url.Action("Index", "CourseOfferings", new { id = course.Id })"
                                                   class="btn btn-outline-success"
                                                   title="Inscripciones">
                                                    <i class="fas fa-users"></i>
                                                </a>
                                            }

                                            <!-- Eliminar Curso Base (solo admin) -->
                                            @if (isAdmin)
                                            {
                                                <a href="@Url.Action("Eliminar", "Cursos", new { id = course.CursoId })"
                                                   class="btn btn-outline-danger"
                                                   title="Eliminar curso base"
                                                   onclick="return confirm('¿Está seguro de eliminar este curso base?')">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-book-open display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">No hay cursos disponibles</h4>
                    <p class="text-muted">
                        @if (isAdmin)
                        {
                            <span>Comienza creando un curso base en "Gestionar Cursos Base".</span>
                        }
                        else if (isProfesor)
                        {
                            <span>No tienes cursos asignados para impartir.</span>
                        }
                        else
                        {
                            <span>Actualmente no hay cursos disponibles.</span>
                        }
                    </p>
                    @if (isAdmin)
                    {
                        <a href="@Url.Action("GestionarCursosBase", "Cursos")" class="btn btn-primary mt-3">
                            <i class="fas fa-cog me-2"></i>
                            Gestionar Cursos Base
                        </a>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Información adicional para administradores -->
    @if (isAdmin)
    {
        <div class="card mt-4">
            <div class="card-header bg-light">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Información para Administradores
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Tipos de Gestión:</h6>
                        <ul class="small text-muted">
                            <li><strong>Gestionar Ofertas:</strong> Administra las instancias específicas de cursos (con profesor, período y sección)</li>
                            <li><strong>Gestionar Cursos Base:</strong> Administra las plantillas de cursos (código, nombre, descripción)</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Flujo de Trabajo Recomendado:</h6>
                        <ol class="small text-muted">
                            <li>Crea cursos base en "Gestionar Cursos Base"</li>
                            <li>Crea períodos académicos desde "Gestionar Cursos Base" → "Gestionar Períodos"</li>
                            <li>Crea ofertas de cursos en "Gestionar Ofertas"</li>
                            <li>Asigna profesores y gestiona inscripciones</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Filtro simple de búsqueda
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.createElement('input');
            searchInput.type = 'text';
            searchInput.className = 'form-control mb-3';
            searchInput.placeholder = 'Buscar cursos por nombre o código...';
            searchInput.id = 'searchCourses';

            const cardHeader = document.querySelector('.card-header');
            if (cardHeader) {
                cardHeader.appendChild(searchInput);
            }

            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const code = row.cells[0].textContent.toLowerCase();
                    const name = row.cells[1].textContent.toLowerCase();

                    if (code.includes(searchTerm) || name.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>
}