@model Control_De_Tareas.Models.CursoDto
@{
    ViewData["Title"] = "Editar Curso Base";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 text-primary">
                    <i class="fas fa-edit me-2"></i>Editar Curso Base
                </h2>
                <a href="@Url.Action("GestionarCursosBase", "Cursos")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
            </div>

            <!-- Mensajes -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Formulario -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book me-2"></i>Información del Curso Base
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Editar">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label for="Codigo" class="form-label">
                                <i class="fas fa-hashtag me-2"></i>Código del Curso *
                            </label>
                            <input type="text" class="form-control" id="Codigo" asp-for="Codigo"
                                   placeholder="Ej: MAT-101, PROG-202" required
                                   maxlength="10">
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                            <small class="text-muted">Máximo 10 caracteres. Ejemplo: MAT101, PROG202</small>
                        </div>

                        <div class="mb-3">
                            <label for="Nombre" class="form-label">
                                <i class="fas fa-book me-2"></i>Nombre del Curso *
                            </label>
                            <input type="text" class="form-control" id="Nombre" asp-for="Nombre"
                                   placeholder="Ej: Matemáticas Básicas, Programación I" required
                                   maxlength="200">
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <small class="text-muted">Nombre completo del curso</small>
                        </div>

                        <div class="mb-3">
                            <label for="Descripcion" class="form-label">
                                <i class="fas fa-align-left me-2"></i>Descripción
                            </label>
                            <textarea class="form-control" id="Descripcion" asp-for="Descripcion"
                                      rows="4" placeholder="Descripción detallada del curso..."
                                      maxlength="500"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                            <small class="text-muted">Opcional. Máximo 500 caracteres.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-toggle-on me-2"></i>Estado del Curso
                            </label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="EstadoActivo"
                                           name="Estado" value="Activo" checked="@(Model.Estado == "Activo")">
                                    <label class="form-check-label" for="EstadoActivo">
                                        <span class="badge bg-success">Activo</span>
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="EstadoInactivo"
                                           name="Estado" value="Inactivo" checked="@(Model.Estado == "Inactivo")">
                                    <label class="form-check-label" for="EstadoInactivo">
                                        <span class="badge bg-secondary">Inactivo</span>
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("GestionarCursosBase", "Cursos")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validación del formulario
        document.querySelector('form').addEventListener('submit', function(e) {
            const codigo = document.getElementById('Codigo').value.trim();
            const nombre = document.getElementById('Nombre').value.trim();

            if (!codigo) {
                e.preventDefault();
                alert('El código del curso es requerido');
                document.getElementById('Codigo').focus();
                return;
            }

            if (!nombre) {
                e.preventDefault();
                alert('El nombre del curso es requerido');
                document.getElementById('Nombre').focus();
                return;
            }

            if (codigo.length > 10) {
                e.preventDefault();
                alert('El código no puede exceder 10 caracteres');
                document.getElementById('Codigo').focus();
                return;
            }

            if (nombre.length > 200) {
                e.preventDefault();
                alert('El nombre no puede exceder 200 caracteres');
                document.getElementById('Nombre').focus();
                return;
            }
        });

        // Contador de caracteres para descripción
        const descripcionTextarea = document.getElementById('Descripcion');
        if (descripcionTextarea) {
            const charCount = document.createElement('small');
            charCount.className = 'form-text text-muted float-end';
            charCount.id = 'charCount';
            charCount.textContent = descripcionTextarea.value.length + '/500 caracteres';

            descripcionTextarea.parentNode.appendChild(charCount);

            descripcionTextarea.addEventListener('input', function() {
                const length = this.value.length;
                charCount.textContent = `${length}/500 caracteres`;

                if (length > 450) {
                    charCount.className = 'form-text text-warning float-end';
                } else {
                    charCount.className = 'form-text text-muted float-end';
                }

                if (length > 500) {
                    charCount.className = 'form-text text-danger float-end';
                }
            });
        }
    </script>
}