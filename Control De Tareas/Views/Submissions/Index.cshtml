@model IEnumerable<Control_De_Tareas.Data.Entitys.Submissions>

@{
    ViewData["Title"] = "Mis Entregas";
    var userRole = ViewBag.UserRole as string;
    var isProfessor = userRole == "Profesor" || userRole == "Administrador";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3">
                <i class="bi bi-folder-check text-primary"></i>
                Mis Entregas
            </h2>
            <p class="text-muted">
                @if (isProfessor)
                {
                    <span>Gestiona todas las entregas de los estudiantes</span>
                }
                else
                {
                    <span>Gestiona tus entregas de tareas</span>
                }
            </p>
        </div>
    </div>

    <!-- Botón para nueva entrega -->
    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Nueva Entrega
            </a>
        </div>
    </div>

    <!-- Lista de entregas -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul text-primary"></i>
                        Entregas Registradas
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;">#</th>
                                        @if (isProfessor)
                                        {
                                            <th style="width: 20%;">Estudiante</th>
                                        }
                                        <th style="width: 25%;">Tarea</th>
                                        <th style="width: 15%;">Fecha Entrega</th>
                                        <th style="width: 10%;">Archivos</th>
                                        <th style="width: 10%;">Calificación</th>
                                        <th style="width: 10%;">Estado</th>
                                        <th style="width: 15%;" class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 1;
                                    }
                                    @foreach (var submission in Model)
                                    {
                                        <tr>
                                            <td class="align-middle">@index</td>
                                            @if (isProfessor)
                                            {
                                                <td class="align-middle">
                                                    <i class="bi bi-person-circle me-2"></i>
                                                    <strong>@submission.Student?.UserName</strong>
                                                </td>
                                            }
                                            <td class="align-middle">
                                                <i class="bi bi-file-text text-primary me-2"></i>
                                                @submission.Task?.Title
                                            </td>
                                            <td class="align-middle">
                                                @submission.SubmittedAt.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td class="align-middle">
                                                <span class="badge bg-info text-dark">
                                                    @(submission.SubmissionFiles?.Count ?? 0) archivos
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                @if (submission.CurrentGrade > 0)
                                                {
                                                    <span class="badge bg-success">@submission.CurrentGrade</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                <span class="badge bg-@(submission.Status == "Submitted" ? "warning" : "success") text-dark">
                                                    @submission.Status
                                                </span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details"
                                                       asp-route-id="@submission.Id"
                                                       class="btn btn-sm btn-info text-white"
                                                       title="Ver detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>

                                                    @if (isProfessor)
                                                    {
                                                        <button class="btn btn-sm btn-danger"
                                                                onclick="return confirm('¿Está seguro de eliminar esta entrega?')"
                                                                title="Eliminar">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">No hay entregas registradas</h4>
                            <p class="text-muted">Comienza creando tu primera entrega.</p>
                            <a asp-action="Create" class="btn btn-primary mt-3">
                                <i class="bi bi-plus-circle"></i>
                                Nueva Entrega
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background-color: #3b7dbd;
        border-color: #3b7dbd;
    }

    .btn-primary:hover {
        background-color: #2e6399;
        border-color: #2e6399;
    }

    .text-primary {
        color: #3b7dbd !important;
    }

    .card-header {
        border-bottom: 2px solid #3b7dbd;
    }

    .table thead th {
        border-bottom: 2px solid #3b7dbd;
        font-weight: 600;
    }

    h2 {
        color: #2c3e50;
    }
</style>
```

